---

import MainGridLayout from '../layouts/MainGridLayout.astro'

import { getEntry } from 'astro:content'
import { i18n } from '../i18n/translation'
import I18nKey from '../i18n/i18nKey'
import Markdown from '@components/misc/Markdown.astro'
import { friendLinkConfig } from '../config'

const aboutPost = await getEntry('spec', 'link')

const { Content } = await aboutPost.render()
---
<MainGridLayout title={i18n(I18nKey.link)} description={i18n(I18nKey.link)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content />
            </Markdown>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-6">
        {
          friendLinkConfig.map((friend) => (
            <a 
              href={friend.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="card-base p-4 flex items-center gap-4 transition-all duration-200 hover:shadow-lg hover:border-primary/20"
            >
              <img 
                src={friend.avatar} 
                alt={friend.name} 
                class="w-16 h-16 rounded-full object-cover"
                width="64"
                height="64"
              />
              <div class="flex-1 min-w-0">
                <h3 class="font-bold text-lg truncate text-90">{friend.name}</h3>
                <p class="text-sm mt-1 line-clamp-2 text-75">{friend.description}</p>
              </div>
            </a>
          ))
        }
    </div>
</MainGridLayout>